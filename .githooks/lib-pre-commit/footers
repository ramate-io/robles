#!/bin/bash

set -e

# Status helper function
status() {
    if [ $? -eq 0 ]; then
        echo "‚úÖ $1"
    else
        echo "‚ùå $1"
        return 1
    fi
}

echo "Running pre-commit hook: Managing ROBLES footer in markdown files..."

# Find all tracked markdown files in the repository, excluding template files
FILES=$(git ls-files --cached --exclude-standard -- '*.md' | grep -v '\.template\.md$')
status "Finding markdown files" || exit 1

if [ -z "$FILES" ]; then
    echo "üì≠ No markdown files found in the repository."
    exit 0
fi

# Count total files for progress reporting
TOTAL_FILES=$(echo "$FILES" | wc -l | tr -d ' ')
CURRENT=0
FAILED_FILES=()

# Process each markdown file
for file in $FILES; do
    CURRENT=$((CURRENT + 1))
    echo "üìù Processing ${file} (${CURRENT}/${TOTAL_FILES})..."
    
    # Create a temporary file
    TMP_FILE=$(mktemp)
    
    # Remove existing footer if present and clean up whitespace
    awk '
        BEGIN { in_footer=0; last_was_empty=0 }
        /<!--ROBLES FOOTER: DO NOT REMOVE THIS LINE-->/ { in_footer=1; next }
        in_footer && /^--$/ { next }
        in_footer && /^<h5>/ { next }
        in_footer && /^<\/h5>/ { in_footer=0; next }
        !in_footer { 
            if ($0 ~ /^[[:space:]]*$/) {
                if (!last_was_empty) print
                last_was_empty=1
            } else {
                print
                last_was_empty=0
            }
        }
        END { 
            if (!last_was_empty) print ""
        }
    ' "$file" | sed -e 's/[[:space:]]*$//' > "$TMP_FILE"
    
    # Add new footer
    if [ $? -eq 0 ]; then
        cat assets/footer.template.md >> "$TMP_FILE"
        
        # Replace original file with modified content
        if mv "$TMP_FILE" "$file"; then
            # Add the modified file to staging
            if git add "$file"; then
                echo "‚úÖ Updated ${file}"
            else
                echo "‚ùå Failed to stage ${file}"
                FAILED_FILES+=("${file} (staging failed) ‚ùå")
            fi
        else
            echo "‚ùå Failed to update ${file}"
            FAILED_FILES+=("${file} (update failed) ‚ùå")
        fi
    else
        echo "‚ùå Failed to process ${file}"
        FAILED_FILES+=("${file} (processing failed) ‚ùå")
    fi
done

# Report results
echo "‚ú® Footer management complete! Processed ${TOTAL_FILES} markdown files."

if [ ${#FAILED_FILES[@]} -gt 0 ]; then
    echo "‚ùå The following files failed to process:"
    for file in "${FAILED_FILES[@]}"; do
        echo "   - ${file}"
    done
    exit 1
fi

exit 0